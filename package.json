{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "build:verify": "bash scripts/build-check.sh verify",
    "deploy:prod": "bash scripts/build-check.sh prod",
    "deploy:dev": "bash scripts/build-check.sh dev",
    "predeploy": "bash scripts/pre-deploy-check.sh",
    "start": "next start",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@payloadcms/db-sqlite": "^3.54.0",
    "@prisma/client": "^6.15.0",
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^7.0.1",
    "bcrypt": "^6.0.0",
    "handlebars": "^4.7.8",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.2.32",
    "next-intl": "^4.3.6",
    "nodemailer": "^7.0.6",
    "payload": "^3.54.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/react": "18.3.24",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prisma": "^6.15.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "collectCoverageFrom": [
      "components/**/*.{js,jsx}",
      "pages/**/*.{js,jsx}",
      "lib/**/*.{js,jsx}",
      "!pages/_app.js",
      "!pages/_document.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
